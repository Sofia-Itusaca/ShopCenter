<div class="container">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <%= form_with(model: @producto) do |form| %>
        <div class="card">
          <div class="card-body">
            <div class="field">
              <%= form.label :titulo %>
              <%= form.text_field :titulo, class: "form-control" %>
              <% if @producto.errors[:titulo].any? %>
                <div class="error-message"><%= @producto.errors[:titulo].first %></div>
              <% end %>
            </div>

            <div class="field">
              <%= form.label :description %>
              <%= form.text_area :description, class: "form-control" %>
              <% if @producto.errors[:description].any? %>
                <div class="error-message"><%= @producto.errors[:description].first %></div>
              <% end %>
            </div>

            <div class="field">
              <%= form.label :price %>
              <%= form.number_field :price, step: '0.01', class: "form-control" %>
              <% if @producto.errors[:price].any? %>
                <div class="error-message"><%= @producto.errors[:price].first %></div>
              <% end %>
            </div>
            
            <div class="field">
              <%= form.label :color %>
              <%= form.text_field :color, class: "form-control" %>
              <% if @producto.errors[:color].any? %>
                <div class="error-message"><%= @producto.errors[:color].first %></div>
              <% end %>
            </div>
            
            <div class="field">
              <%= form.label :stock %>
              <%= form.number_field :stock, class: "form-control" %>
              <% if @producto.errors[:stock].any? %>
                <div class="error-message"><%= @producto.errors[:stock].first %></div>
              <% end %>
            </div>
            
            <div class="field">
              <%= form.label :category_id, "Categoria" %>
              <%= form.collection_select :category_id, Category.all.order(name: :asc), :id, :name, { prompt: "Seleccione una categorÃ­a" }, class: "form-control" %>
            </div>
            
            <div class="field">
              <%= form.label :talla_id, "Talla" %>
              <%= form.collection_select :talla_id, Talla.all.order(name: :asc), :id, :name, { prompt: "Seleccione una talla" }, class: "form-control" %>
            </div>

            <div class="field">
              <%= form.label :photo %>
              <%= form.file_field :photo, class: "form-control-file" %>
            </div>

            <div class="mt-3 text-center">
              <%= form.submit class: "btn btn-primary" %>
            </div>
          </div>
        </div>
      <% end %>
    </div>
  </div>
</div>
